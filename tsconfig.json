{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["svelte"],
    "allowJs": true,
    "checkJs": true, // Enable for JavaScript files
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*" , "svelte.d.ts"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
